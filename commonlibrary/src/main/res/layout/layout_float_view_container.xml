<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_25"
            android:layout_marginTop="@dimen/dimen_20"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:onClick="close"
                android:id="@+id/iv_advert_close"
                android:layout_width="@dimen/dimen_25"
                android:layout_height="@dimen/dimen_25"
                android:scaleType="fitCenter"
                android:src="@drawable/float_close_img" />

            <ImageView
                android:layout_width="@dimen/dimen_1"
                android:layout_height="@dimen/dimen_70"
                android:src="@color/lightgray" />

        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_advert"
        android:onClick="openNewPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dimen_110"
        android:layout_marginLeft="@dimen/dimen_20"
        android:layout_marginRight="@dimen/dimen_20"
         />

</LinearLayout>